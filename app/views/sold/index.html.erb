<h1>Products</h1>

  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @products.where(:paid => true).each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.description %></td>
          <td><%= number_to_currency(product.price, precision: 0) %></td>
          <td><%= product.user.name %></td>
          <td><%= link_to "Comprar", product_path(product), method: :patch, class: 'btn btn-primary' %></td>
          <td><%= link_to 'Destroy', product, method: :delete, class:'btn btn-danger', data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
